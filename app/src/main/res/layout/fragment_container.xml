<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating_material_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Base.TextAppearance.AppCompat"
        tools:context=".Toolbar"/>
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/fragment_container_tab"
        android:layout_below="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/background_floating_material_light"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_container_view_pager"
        android:layout_below="@+id/fragment_container_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        />
    <FrameLayout
        android:id="@+id/fragment_container_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_container_tab"
        tools:context=".FrameLayout" />
</LinearLayout>
