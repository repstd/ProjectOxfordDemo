<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light">

    <EditText
        android:id="@+id/fragment_face_demo_face_attr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number"
        android:text="Name:"
        android:textColor="@color/background_floating_material_dark" />

    <EditText
        android:id="@+id/fragment_face_demo_face_attr_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_face_demo_face_attr_name"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number"
        android:text="Age:"
        android:textColor="@color/background_floating_material_dark" />

    <EditText
        android:id="@+id/fragment_face_demo_face_attr_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_face_demo_face_attr_gender"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number"
        android:text="Gender:"
        android:textColor="@color/background_floating_material_dark" />
</RelativeLayout>
