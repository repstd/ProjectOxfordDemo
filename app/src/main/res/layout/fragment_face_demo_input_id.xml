<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_face_demo_input_prompt_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_material_light"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/fragment_face_demo_input_person_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="personId"
        android:inputType="textPersonName"
        android:textColor="@color/background_floating_material_dark"
        android:textColorHint="@color/background_floating_material_dark" />

    <EditText
        android:id="@+id/fragment_face_demo_input_group_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="groupId"
        android:inputType="textPersonName"
        android:textColor="@color/background_floating_material_dark"
        android:textColorHint="@color/background_floating_material_dark" />
</LinearLayout>
